{{<basic-web-template}}

{{$includes}}
  <script src="../js/bloomfilter.js"></script>
  <script src="../js/bad_password_bloom_data.js"></script>
  <script src="../js/passwords.js"></script>
  <script src="../js/querystring.js"></script>
  <script src="../js/userpass.js"></script>
  <script src="../js/forms.js"></script>
  <script src="../js/change-password.js"></script>
{{/includes}}


{{$header}}
    {{<header-basic-template}}
    {{$header-title}}Change Password{{/header-title}}
    {{/header-basic-template}}
{{/header}}

{{$content}}
    <div class="basic-form-container">
      <form id="change-password-form">
          <div class="text-error" id="password-error"></div>
          <div class="form-group" id="password-form-group">
            <label>Password:</label>
            <input type="password" name="new-password" id="password" placeholder="new password" tabindex="2">
             <a title="Show Password" id="show-password" class="icon-eye show-password" href="#"></a>
            <div id="password-hints-box" class="arrow-box">
              <div class="arrow-right"></div>
              <h3>Create a strong password:</h3>
              <ul>
                <li id="min">Minimum 8 characters</li>
                <li id="up">One uppercase</li>
                <li id="num">One number</li>
                <li id="sp">One special character<br/>(symbol/punctuation)</li>
                <!--<li id="common">Not commonly used<br/>e.g. "12345678" or "password1"</li>-->
              </ul>
            </div>
          </div>
          <div class="form-group">
            <label>Confirm Password:</label>
            <input type="password" id="confirm-password" name="new-password2" placeholder="confirm password" tabindex="3">
            <div id="remember-password-alert" class="arrow-box arrow-box-alert">
              <div class="arrow-left"></div>
              <h3>Remember your password</h3>
              <div>To protect your privacy and data, we do not store your password, so we can't recover it for you. If you forget it, you will lose all your saved data.</div>
            </div>
          </div>
          <div id="progress">
            <div class="progress">
              <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
            </div>
            <div class="progress-msg">&nbsp;</div>
          </div>
          <div class="alert-box">
            <em>WARNING: Do not forget your password! There is currently no password recovery.  You will lose all of your saved data.</em>
          </div>
          <button type="submit" id="change-password-form-button" tabindex="4">Change Password</button>
      </form>
    </div>
  </div>
{{/content}}

{{/basic-web-template}}
