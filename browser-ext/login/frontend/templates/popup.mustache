  <!-- panes -->

  <div class="pane" data-pane="secrets">

    <div class="active-account hide">
    </div>

    <div id="no-account-banner" class="vertical-center hide">
      <div class="vertical-center-wrapper">
        <p>Mitro</p>
      </div>
    </div>

    <div class="search">

      <div class="left">
        <span class="mitro-icon-search"></span>
      </div>

      <div class="input">
        <input id="secret-filter-string" type="text" placeholder="log me in to&#8230;">
      </div>

      <div class="right">
        <a id="secret-filter-clear" class="hide" href="#">
          <span class="mitro-icon-cross"></span>
        </a>
      </div>

    </div>

    <div class="secrets">
      <div class="border top"></div>
      <div class="list pane2" id="context"></div>
      <div class="border bottom"></div>
    </div>

  </div>

  <div class="pane hide" data-pane="team">

    <div class="active-account">
    </div>

    <div class="search">

      <div class="left">
        <span class="mitro-icon-search"></span>
      </div>

      <div class="input">
        <input id="team-filter-string" type="text" placeholder="search people and teams">
      </div>

      <div class="right">
        <a id="team-filter-clear" class="hide" href="#">
          <span class="mitro-icon-cross"></span>
        </a>
      </div>

    </div>

    <div class="people">
      <div class="border top"></div>
      <div class="list share-list">
      </div>
      <div id="invite-item" class="hide" data-open-pane="invite" data-secret-id>
        <div class="details">
          <div class="image icon-usercircle"></div>
          <div class="text name">invite <span id="invite-name"></span></div>
        </div>
      </div>
      <div class="border bottom"></div>
    </div>

  </div>

  <div class="pane hide" data-pane="invite">
      <div class="active-account">
      </div>

      <div class="fields">
        <div class="field">
          <input name="email" type="text" placeholder="Email">
        </div>
        <div class="field">
          <input name="name" type="text" placeholder="Name">
        </div>
        <div class="field">
          <textarea name="message" placeholder="Message (optional)"></textarea>
        </div>
      </div>

      <a class="send-invite-button button" href="#">Send Invite</a>

  </div>

  <div class="settings generate-password pane hide" data-pane="generate-password">
    <h1>Generate Password</h1>
    <div class="fields">
      <div class="field">
        <input class="generated-password" type="text">
      </div>
      <div id="advanced-pwd-options">
        <div class="field-group">
          <div class="field">
            <input class="compact" type="text" id="pwd-num-characters" size="3">
          </div>
          <label for="pwd-num-characters">Characters</label>
        </div>
        <div class="checkbox-group">
          <div class="checkbox">
            <label for="pwd-uppercase">
              <input id="pwd-uppercase" type="checkbox" checked/> Uppercase
            </label>
          </div>
          <div class="checkbox">
            <label for="pwd-digit">
              <input id="pwd-digit" type="checkbox" checked/> Digits
            </label>
          </div>
          <div class="checkbox">
            <label for="pwd-special">
              <input id="pwd-special" type="checkbox" checked/> Special Characters
            </label>
          </div>
        </div>
      </div>
      <div class="links">
        <div class="link">
          <a id="show-advanced-pwd-options" href="#">Show Advanced Options</a>
        </div>
      </div>
      <div class="buttons">
        <a class="button compact regenerate-pwd-link" href="#">Regenerate Password</a>
      </div>
      <div class="buttons">
        <a class="button compact copy-pwd-link" href="#">Copy to clipboard</a>
      </div>
    </div>
    <div class="links bottom">
      <div class="link">
        <a href="#" data-open-pane="settings">Back</a>
      </div>
    </div>
  </div>

  <div class="pane hide" data-pane="settings">
    <h1>Settings</h1>
    <div class="buttons">
      <a class="button generate-password-link" href="#" data-open-pane="generate-password">Generate Random Password</a>
    </div>
    <h1>Migration</h1>
    <p>Already using LastPass, 1Password or another password management app?</p>
    <div class="buttons">
      <a class="button" href="../html/importer.html" target="_blank">Import Secrets</a>
    </div>
    <div class="links">
      <div class="link">
        <a href="../html/export.html" target="_blank">Export Secrets</a>
      </div>
      <div class="link">
        <a id="change-pwd-two-factor" href="#">Change Mitro Password</a>
      </div>
      <div class="link">
        <a id="two-factor-prefs" href="#">Two Factor Auth Preferences</a>
      </div>
    </div>
    <div class="links bottom">
      <div class="link">
        <a class="logout" href="#">Sign Out</a>
      </div>
    </div>
  </div>

  <!-- footer (fixed, appears on all panes) -->

  <div class="footer">
    <div class="left">
      <a href="secrets.html" target="_blank">
        <span class="mitro-icon-logo-mini"></span>
      </a>
    </div>
    <div class="center"><!-- required to avoid weird layout --></div>
    <div class="right">
      <a href="#" class="toggle" data-open-pane="settings">
        <span class="mitro-icon-gear"></span>
      </a>
      <a href="#" class="hide toggle" data-open-pane="secrets">
        <span class="mitro-icon-vault-1"></span>
      </a>
    </div>
  </div>

