{{$content}}

<!-- logged out -->

<div id="logged-out" class="hide">

  <div class="icon-logo" id="logo"></div>

  <form id="mitro-login-form" class="hide" role="form" method="post" autocomplete="off">

    <input type="hidden" name="tfa-code">
    <div class="sign-up">
      <a class="button" href="signup.html" target="_blank">Sign Up</a>
    </div>

    <div class="fields">
      <div class="label error" id="login-error" style="display: none; font-weight: bold;"></div>
      <div class="field">
        <input type="email" name="username" placeholder="email">
        <i class="icon"></i>
      </div>
      <div class="field">
        <input type="password" name="password" placeholder="password">
        <i class="icon"></i>
      </div>
    </div>

    <div class="actions">
      <div class="left">
        <label>
          <div class="checkbox checked">
            <input class="remember-me" type="checkbox" checked>
          </div>
          <div class="label">stay logged in</div>
        </label>
      </div>
      <div class="right">
        <button class="button" type="submit" id="mitro-login-form-button">log in</button>
      </div>
    </div>
    <div id="remind-alert">
      anyone with access to your computer can <br />access your secrets
    </div>

    <div id="tfa-code" class="overlay">
      <div class="vertical-center">
        <div class="vertical-center-wrapper">
          <div class="vertical-center-container">
            <h1>Two-Step Authentication</h1>
            <p>Enter the 2-step verification code <br />from your mobile application:</p>
            <div class="field">
              <input id="tfa-code-input" type="text">
            </div>
            <button class="button">Verify</button>
          </div>
        </div>
      </div>
    </div>

  </form>
</div>

<!-- logging in (loading) -->

<div id="logging-in" class="hide">
  <div class="vertical-center">
    <div class="vertical-center-wrapper">
      <div class="vertical-center-container">
        <img src="../img/ext-popup-loader@2x.gif" width="75" height="60">
        <p>Logging In</p>
      </div>
    </div>
  </div>
</div>

<!-- logged in -->

<div id="logged-in" class="hide" data-current-pane="secrets">
